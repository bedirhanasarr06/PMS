+public class PersonelDAO {
+    private static final String URL = "jdbc:mysql://localhost:3306/personel_db"; // Veritabanı URL
+    private static final String USER = "root"; // Kullanıcı adı
+    private static final String PASSWORD = "password"; // Şifre
+
+    // Veritabanı bağlantısı kuran metod
+    private Connection connect() throws SQLException {
+        return DriverManager.getConnection(URL, USER, PASSWORD);
+    }
+
+    // Personel ekleme
+    public void addPersonel(Personel personel) {
+        String sql = "INSERT INTO personel (name, surname, person_id, birth_date, hire_date, department_id, salary) VALUES (?, ?, ?, ?, ?, ?, ?)";
+        try (Connection conn = connect(); PreparedStatement stmt = conn.prepareStatement(sql)) {
+            stmt.setString(1, personel.getName());
+            stmt.setString(2, personel.getSurname());
+            stmt.setInt(3, personel.getPersonID());
+            stmt.setString(4, personel.getBirthDate());
+            stmt.setString(5, personel.getHireDate());
+            stmt.setInt(6, personel.getDepartmentID());
+            stmt.setDouble(7, personel.getSalary());
+            stmt.executeUpdate();
+        } catch (SQLException e) {
+            e.printStackTrace();
+        }
+    }
+
+    // Personel güncelleme
+    public void updatePersonel(Personel personel) {
+        String sql = "UPDATE personel SET name = ?, surname = ?, birth_date = ?, hire_date = ?, department_id = ?, salary = ? WHERE person_id = ?";
+        try (Connection conn = connect(); PreparedStatement stmt = conn.prepareStatement(sql)) {
+            stmt.setString(1, personel.getName());
+            stmt.setString(2, personel.getSurname());
+            stmt.setString(3, personel.getBirthDate());
+            stmt.setString(4, personel.getHireDate());
+            stmt.setInt(5, personel.getDepartmentID());
+            stmt.setDouble(6, personel.getSalary());
+            stmt.setInt(7, personel.getPersonID());
+            stmt.executeUpdate();
+        } catch (SQLException e) {
+            e.printStackTrace();
+        }
+    }
+
+    // Personel silme
+    public void deletePersonel(int personID) {
+        String sql = "DELETE FROM personel WHERE person_id = ?";
+        try (Connection conn = connect(); PreparedStatement stmt = conn.prepareStatement(sql)) {
+            stmt.setInt(1, personID);
+            stmt.executeUpdate();
+        } catch (SQLException e) {
+            e.printStackTrace();
+        }
+    }
